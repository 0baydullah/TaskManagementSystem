<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AJAX Form Submission</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }

        .container {
            max-width: 400px;
            margin: auto;
        }

        input {
            width: 100%;
            padding: 8px;
            margin: 5px 0;
        }

        button {
            width: 100%;
            padding: 10px;
            background: blue;
            color: white;
            border: none;
        }

        .error {
            color: red;
            font-size: 14px;
        }

        .login-text {
            text-align: center;
            font-size: 14px;
            margin-top: 10px;
        }

            .login-text a {
                color: blue;
                text-decoration: none;
            }

                .login-text a:hover {
                    text-decoration: underline;
                }

        h2 {
            text-align: center;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2>Login</h2>
        <div id="errorMessage"></div>
        <form id="registerForm">
            <label>Email:</label>
            <input type="email" id="email" name="email" required>

            <label>Password:</label>
            <input type="password" id="password" name="password" required>

            <button type="submit">Login</button>
            <p class="login-text"><a href="/Account/ForgotPassword">Forgot password</a></p>
        </form>

        <div id="responseMessage"></div>
    </div>

    <script>
        $(document).ready(function () {
            $("#registerForm").submit(function (event) {
                event.preventDefault();

                var userInfo = {
                    Email: $("#email").val().trim(),
                    Password: $("#password").val()
                };

                $.ajax({
                    url: '/Account/Login',
                    type: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify(userInfo),
                    success: function (response) {
                        $("#responseMessage").html("<p style='color:green;'>Login successful!</p>");
                        $("#registerForm")[0].reset();
                        window.location.href = response.redirectUrl;
                    },
                    error: function (xhr) {
                        if (xhr.status === 400) {
                            var response = JSON.parse(xhr.responseText);
                            if (response.errors) {
                                var errorList = response.errors.map(e => `<li>${e}</li>`).join("");
                                $("#errorMessage").html(`<div class='error' style='color:red;'>${errorList}</div>`);
                            }
                        }
                        else {
                            $("#responseMessage").html("<p style='color:red;'>An error occurred. Please try again.</p>");
                        }
                    }
                });
            });
        });
    </script>

</body>
</html>
