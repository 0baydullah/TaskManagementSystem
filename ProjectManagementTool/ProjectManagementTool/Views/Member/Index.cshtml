@model IEnumerable<DataAccessLayer.Models.ViewModel.MemberWithRoleVM>
@{
    ViewData["Title"] = "Index";
    ViewData["Banner"] = "Member Panel";
}


<div class="mb-3">
    <a class="btn btn-success fw-bold" href="@Url.Action("Create", "Member", new { projectId = ViewBag.ProjectId })">Add Member</a>
</div>


<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Email
            </th>
            <th>
                Role
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role)
                    </td>
                    <td>
                        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.MemberId">Edit</a> |
                        <a class="btn btn-danger" onclick="openDeleteModal('@item.MemberId')">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="7" class="text-center fw-bold text-danger">No data found!</td>
            </tr>
        }
        
    </tbody>

</table>

<div class="modal fade" id="modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title text-black" id="exampleModalLabel">Delete Member !!</h3>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-capitalize text-danger">
                After clicking on "Delete" button it wont be undone!
            </div>
            <div class="modal-footer text-center justify-content-center">
                <button type="button" class="btn btn-outline-dark" data-bs-dismiss="modal">Cancel</button>
                <button type="button" onclick="confirmDelete()" class="btn btn-outline-danger">OK</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let projectIdToDelete = 0;

        function openDeleteModal(id)
        {
            memberIdToDelete = id;
            $("#modal").modal('show');
        }

        function confirmDelete() {
            $.ajax({
                url: `/Member/Delete/${memberIdToDelete}`,
                type: 'POST',
                success: function (response) {
                    if(response.success) {
                        $("#modal").modal('hide');
                        $('#response-message').html('<div class="alert alert-success">' + response.message + '</div>');
                        setTimeout(() => {
                            window.location.reload();
                        }, 1000);
                    }

                    else {
                       $('#response-message').html('<div class="alert alert-danger">' + response.message + '</div>');
                    }
                },
                error: function (response) {
                      $('#response-message').html('<div class="alert alert-danger">' + response.message + '</div>');
                }
            });
        }
    </script>
}