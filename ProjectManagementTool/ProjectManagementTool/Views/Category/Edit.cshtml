@model DataAccessLayer.Models.Entity.Category

@{
    ViewData["Title"] = "Edit Priority";
    ViewData["Banner"] = "Edit Category";
}


<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input asp-for="CategoryId" class="form-control" value="@Model.CategoryId" type="hidden"/>
            <div class="form-group mt-4">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" value="@Model.Name"/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ColorHex" class="control-label">Choose Color</label>
                <input asp-for="ColorHex" class="form-control" style="height:50px;" type="color" value="@Model.ColorHex"/>
                <span asp-validation-for="ColorHex" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-center mt-4">
                <input type="submit" value="Update" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div class="d-flex justify-content-center mt-4">
    <a asp-action="Index" class="btn btn-outline-danger">Back to Categories</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

