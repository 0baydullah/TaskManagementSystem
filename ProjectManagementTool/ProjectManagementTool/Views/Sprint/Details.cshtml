@model DataAccessLayer.Models.ViewModel.SprintDetailsVM
@using DataAccessLayer.StaticClass
@{
    ViewData["Title"] = "Details";
    ViewData["Banner"] = "Sprint Details";
}

@{
    var breadcrumbs = new List<KeyValuePair<string, string>>
    {
        new KeyValuePair<string, string>("","#"),
        new KeyValuePair<string, string>("Project", Url.Action(ActionNameHelper.IndexActionName, ControllerNameHelper.ProjectControllerName) ?? string.Empty),
        new KeyValuePair<string, string>("Dashboard", Url.Action(ActionNameHelper.DetailsActionName, ControllerNameHelper.ProjectControllerName, new{ id = ViewBag.ProjectId })?? string.Empty),
        new KeyValuePair<string, string>("Sprint", Url.Action(ActionNameHelper.IndexActionName, ControllerNameHelper.SprintControllerName, new{ projectId = ViewBag.ProjectId })?? string.Empty),
        new KeyValuePair<string, string>("Details", "#"),
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

<div class="d-flex justify-content-between">
    <h3 class="text-center">Sprint: @Model.SprintName</h3>
</div>

<hr />

<div>
    Description: @Model.Description
    <hr />
    Start Date: @Model.StartDate
    <hr />
    End Date: @Model.EndDate
    <hr />
    Points: @Model.Points
    <hr />
    Velocity: @Model.Velocity
    <hr />
</div>

<div class="d-flex justify-content-between mb-2">
    <h3>User Story</h3>
   @*  <a class="btn btn-success" asp-controller="UserStory" asp-action="Create" asp-route-id="#">
        <i class="text-light fa-solid fa-plus"></i> User Story
    </a> *@
</div>

<div>
    <table class="table table-bordered table-striped table-hover" id="datatable">
        <thead>
            <tr>
                <th>
                    Story Name
                </th>

                <th>
                    Category
                </th>

                <th>
                    EstimateTime
                </th>
                <th>
                    Points
                </th>
                <th>
                    Status
                </th>

            </tr>
        </thead>
        <tbody>
                @foreach (var item in Model.UserStroy)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.StoryName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Category)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EstimateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                    </tr>
                }


        </tbody>

    </table>
</div>

@section Scripts{
    <script>


        $(document).ready(function () {
            $("#datatable").DataTable({

            });
        });
        $("th").css("background-color", "aliceblue");


    </script>
}

