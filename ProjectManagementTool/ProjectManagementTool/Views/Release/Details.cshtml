@model DataAccessLayer.Models.ViewModel.ReleaseDetailsVM
@using DataAccessLayer.StaticClass

@{
    ViewData["Title"] = "Details";
    ViewData["Banner"] = "Release Details";
}

@{
    var breadcrumbs = new List<KeyValuePair<string, string>>
    {
        new KeyValuePair<string, string>("Project", Url.Action("Index", "Project") ?? string.Empty),
        new KeyValuePair<string, string>("Dashboard", Url.Action("Details", "Project",new{id = ProjectKey.GetProjectId()})?? string.Empty),
        new KeyValuePair<string, string>("Release", Url.Action("Index", "Release",new{projectId = ProjectKey.GetProjectId()})?? string.Empty),
        new KeyValuePair<string, string>("Details", Url.Action("Edit", "Release",new{id = Model.ReleaseId})?? string.Empty),
    };
    ViewData["Breadcrumbs"] = breadcrumbs;
}

<div class="d-flex justify-content-between">
    <h3 class="text-center">Release: @Model.ReleaseName</h3>
</div>

<hr />

<div>
    Description: @Model.Description
    <hr />
    Start Date: @Model.StartDate
    <hr />
    End Date: @Model.EndDate
    <hr />
</div>

<div class="d-flex justify-content-between mb-2">
    <h3>Sprints</h3>
    <a class="btn btn-success" asp-controller="Sprint" asp-action="Create" asp-route-projectId="@Model.ProjectId">
        <i class="text-light fa-solid fa-plus"></i> Sprint
    </a>
</div>

<div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>
                    Name
                </th>

                <th>
                    Start Date
                </th>

                <th>
                    End Date
                </th>
                <th>
                    Points
                </th>
                <th>
                    Velocity
                </th>

            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Sprints.Any())
            {
                @foreach (var item in Model.Sprints)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.SprintName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StartDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.EndDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Points)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Velocity)
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center fw-bold text-danger">No Sprint found!</td>
                </tr>
            }


        </tbody>

    </table>
</div>

