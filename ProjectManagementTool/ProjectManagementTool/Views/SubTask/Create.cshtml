@model DataAccessLayer.Models.Entity.SubTask
@{
    ViewData["Title"] = "SubTask-Create";
	ViewData["Banner"] = "Create SubTask";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create" id="createForm" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group mt-2">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Descripton" class="control-label"></label>
                <textarea asp-for="Descripton" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Descripton" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-evenly mt-2">
                <label asp-for="AssignMembersId" class="control-label">Assignee</label>
                <select asp-for="@Model.AssignMembersId" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="background-color : lightblue" asp-items="ViewBag.Members">
                    <option value="0">Select Assignee</option>
                </select>
                <span asp-validation-for="AssignMembersId" class="text-danger"></span>
            
                <label asp-for="ReviewerMemberId" class="control-label">Reviewer</label>
                <select asp-for="@Model.ReviewerMemberId" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="background-color : lightblue" asp-items="ViewBag.Members">
                    <option value="0">Select Reviewer</option>
                </select>
                <span asp-validation-for="ReviewerMemberId" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <label asp-for="EstimatedTime" class="control-label">Estimated Time(hr.)</label>
                <input asp-for="EstimatedTime" class="form-control" />
                <span asp-validation-for="EstimatedTime" class="text-danger"></span>
			</div>
            <div class="form-group mt-3">
                <label asp-for="Tag" class="control-label"></label>
                <input asp-for="Tag" class="form-control"  />
                <span asp-validation-for="Tag" class="text-danger"></span>
            </div>
            <div class="form-group d-flex justify-content-evenly mt-2">
                <label asp-for="Status" class="control-label"></label>

                <select asp-for="Status" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="background-color : lightblue" asp-items="ViewBag.Status"></select>
                <span asp-validation-for="Status" class="text-danger"></span>

                <label asp-for="Priority" class="control-label"></label>
                <select asp-for="@Model.Priority" class="btn btn-sm btn-light dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false" style="background-color : lightblue" asp-items="ViewBag.Priority"></select>
                <span asp-validation-for="Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
             
                <input asp-for="TaskId" class="form-control" type="hidden" value="@ViewBag.Id" />
            </div>
            <div class="form-group mt-3 d-flex justify-content-center">
                <input type="button" onclick="submitForm()" value="Create" class="btn btn-success w-50" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-5 " >
    <a class="btn btn-outline-danger w-25" asp-action="#">Back to Tasks</a>
</div>

@section Scripts {

    <script>
        function submitForm() {
            var form = $('#createForm');
            var formData = new FormData(form[0]);
            $.ajax({
                type: 'POST',
                url: '@Url.Action("Create", "SubTask")',
                data: formData,
                processData: false,
                contentType: false,
                success: function () {
                    window.location.href = '@Url.Action("Details", "Tasks")/'+ @ViewBag.id;
                },
                error: function (error) {
                    alert('An error occurred: ' + error);
                }
            });
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
